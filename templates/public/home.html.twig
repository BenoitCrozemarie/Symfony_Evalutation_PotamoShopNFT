{% extends 'base.html.twig' %}

{% block title %}Coucou
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="row justify-content-evenly">
		{% for product in products %}
			<div class="card mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-4">
						<img src="{{ asset('uploads/'~product.img) }}" class="img-fluid rounded-start" alt="...">
					</div>
					<div class="col-md-6">
						<div class="card-body">
							<h5 class="card-title">{{product.name}}</h5>
							<p class="card-text">{{product.description}}</p>
							
						</div>
					</div>
					<div class="col-md-2">
						<div class="card-body">
							<p class="card-text">{{product.price}} ETH</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
