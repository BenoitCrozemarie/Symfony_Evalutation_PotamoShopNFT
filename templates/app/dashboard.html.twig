{% extends 'base.html.twig' %}

{% block title %}Hey !
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

		<a class="btn btn-info" href="{{ path('add-product', relative = false) }}">
			Ajouter un produit</a>
	<div class="row justify-content-evenly">
		{% for product in products %}
			<div class="card mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-4">
						<img src="{{ asset('uploads/'~product.img) }}" class="img-fluid rounded-start" alt="...">
					</div>
					<div class="col-md-5">
						<div class="card-body">
							<h5 class="card-title">{{product.name}}</h5>
							<p class="card-text">{{product.description}}</p>
							<p class="card-text">
								<small class="text-muted">{{product.createAt|date("d/m/Y H:i:s")}}</small>
							</p>
						</div>
					</div>
                    <div class="col-md-3">
						<div class="card-body">
							
                            {% if product.isOnSale %}
                                <a href="/app/toogle-product/{{product.id}}" class="btn btn-warning">Retirer</a>
                            {% else %}
                                <a href="/app/toogle-product/{{product.id}}" class="btn btn-success">Vendre</a>
                            {% endif %}
                            <p class="card-text">Prix de vente : {{product.price}} ETH</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
